<% content_for(:page_title) { "#{@character.name.humanize}, #{@character.level} #{@character.class_name}" } %>

<output data-t-score><%= @character.score %></output>

<header>
  <h1><%= "#{@character.name.humanize}, #{@character.level} #{@character.class_name}" %></h1>
  <b data-t-guild-name><%= @character.guild_name %></b>
</header>

<dl>
  <dt>Average iLvl</dt>
  <dd data-t-avg-ilvl><%= @character.avg_ilvl %></dd>

  <dt>Lowest iLvl</dt>
  <dd data-t-min-ilvl><%= @character.min_ilvl %></dd>

  <dt>Highest iLvl</dt>
  <dd data-t-max-ilvl><%= @character.max_ilvl %></dd>
</dl>
